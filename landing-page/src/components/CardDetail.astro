---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<article class="card">
  <div class="article-container">
    <div class="icon-container">
      <img src={icon} alt=`icon ${title}` />
    </div>
    <article class="text">
      <h3>{title}</h3>
      <p>{description}</p>
    </article>
  </div>
</article>

<style>
  .card {
    width: 100%;
    border: 1px solid var(--border-color);
    border-radius: 7px;
    padding: 20px;
  }

  .icon-container {
    background-color: var(--third-color);
    display: inline-block;
    padding: 10px;
    border-radius: 7px;
    margin-bottom: 10px;
  }

  h3 {
    margin-bottom: 10px;
  }

  img {
    width: 24px;
  }
</style>
